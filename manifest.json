{
  "manifest_version": 3,
  "name": "SRT Macro",
  "description": "SRT 자동 예약 매크로",
  "version": "1.0.10",
  "host_permissions": [
    "https://etk.srail.kr/"
  ],
  "permissions": [
    "activeTab", // Add any necessary permissions here
    "storage"
  ],
  "icons": {
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://etk.srail.kr/*"
      ],
      "js": [
        "jquery-1.11.3.min.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [ "images/btn_start.png", "images/btn_stop.png", "assets/tada.mp3" ],
      "matches": [ "https://etk.srail.kr/*" ]
    }
  ],
  "options_ui": {
    "page": "options.html"
  }
}

